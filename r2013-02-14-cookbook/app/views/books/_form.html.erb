<%= form_for @book do |f| %>
<%= f.text_field :title, :autofocus => true %>
<%= f.label :title, "Title" %>
<br>
<%= f.text_field :cuisine %>
<%= f.label :cuisine, "Cuisine" %>
<br>
<%= f.text_field :chef %>
<%= f.label :chef, "Chef" %>
<br>
<%= f.text_field :image %>
<%= f.label :image, "Image URL" %>
<br>
<% Recipe.order(:name).each do |recipe| %>
<span><%= recipe.name %></span>
<%= check_box_tag 'book[recipe_ids][]', recipe.id, recipe.in?(@book.recipes) %>
<% end %>
<br>
<%= f.submit :class => 'btn btn-success' %>
<% end %>