<ul>
  <li><h1><%= @ingredient.name %></h1></li>
  <li><%= image_tag(@ingredient.image) %></li>
  <li><%= @ingredient.measurment %></li>
  <li><%= @ingredient.cost %></li>
  <li>Created on: <%= @ingredient.created_at.strftime('%B %d, %Y at %l:%M%P') %></li>
  <li>Updated on: <%= @ingredient.updated_at.strftime('%B %d, %Y at %l:%M%P') %></li>
</ul>
