#table
  %h2= @artist.name
  %div= image_tag(@artist.image)
  -if @artist.albums != nil
    %div
      %h3 Albums
      %table
        -@artist.albums.each do |album|
          %tr
            %td= link_to(album.name, album_path(album))
            %td= image_tag(album.image)
            -if is_admin
              %td= link_to('Edit', edit_album_path(album), :class => 'button radius standard tiny')
              %td= link_to('Delete', album, :method => :delete, :class => 'button radius alert tiny')