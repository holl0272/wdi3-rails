.row
  .large-3.columns
    = form_for @exercise, :remote => true do |f|
      = f.label 'Activity'
      = f.text_field :activity, :autofocus => true
      = f.label 'Value'
      = f.text_field :value
      = f.label 'Unit'
      = f.text_field :unit
      = f.label 'Date'
      = f.text_field :completed
      = f.submit 'Add Exercise', :class => 'button success radius'
  .large-9.columns
