%fieldset.forms
  %legend Registration
  = render(:partial => 'shared/errors', :locals => {:object => @user})
  = form_for @user, :url => subscribers_path, :remote => true do |f|
    = f.label :username
    = f.text_field :username, :autofocus => true
    = f.label :email
    = f.email_field :email
    = f.label :password
    = f.password_field :password
    = f.label :password_confirmation
    = f.password_field :password_confirmation
    = f.submit(:class => 'button radius success')
    = button_to_function('Cancel', 'cancel_subscriber_form()', :id => 'cancel_btn', :class => 'button radius alert')


