%fieldset.forms
  %legend Login
  = form_tag '/login', :remote => true do
    = label_tag :email
    = text_field_tag :email, nil, :autofocus => true
    = label_tag :password
    = password_field_tag :password
    = submit_tag 'Start Flirting', :class => 'button radius success'
    = link_to('Cancel', '#', :'data-clear-form' => true, :class => 'button radius alert', :id => 'cancel_btn')

