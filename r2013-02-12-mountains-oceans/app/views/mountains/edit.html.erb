<form method='post' action='<%= mountain_path(@mountain.id) %>'>

  Name:
  <input value='<%= @mountain.name %>' type='text' name='mountain[name]' autofocus>
  <br>
  Image:
  <input value='<%= @mountain.image %>' type='text' name='mountain[image]'>
  <br>
  Height (ft):
  <input value='<%= @mountain.height %>' type='text' name='mountain[height]'>
  <br>
  Range:
  <input value='<%= @mountain.range %>' type='text' name='mountain[range]'>
  <br>
  Parent Mountain:
  <input value='<%= @mountain.parent %>' type='text' name='mountain[parent]'>
  <br>
  Number of Ascents:
  <input value='<%= @mountain.ascents %>' type='text' name='mountain[ascents]'>
  <br>
  <button>Update</button>
</form>
