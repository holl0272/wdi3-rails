<%= form_for @author do |f| %>
  <%= f.text_field :name %>
  <%= f.label :name, "Name" %>
  <br>
  <%= f.text_field :dob %>
  <%= f.label :dob, "DOB" %>
  <br>
  <%= f.text_field :birthplace %>
  <%= f.label :birthplace, "Birthplace" %>
  <br>
  <%= f.text_field :genre %>
  <%= f.label :genre, "Genre" %>
  <br>
  <%= f.text_field :image %>
  <%= f.label :image, "Image URL" %>
  <br>
  <br>
  <%= f.submit %>
<% end %>